{
  "name": "steelesh.dev",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "concurrently -n web,api -c blue,green \"vite dev\" \"cd api && bun run dev\"",
    "dev:seed": "VITE_SEED=true bun run dev",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "vite build && pagefind",
    "preview": "vite preview",
    "prepare": "svelte-kit sync && husky",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test:a11y": "playwright test tests/a11y.spec.ts"
  },
  "dependencies": {
    "@giscus/svelte": "^3.1.0",
    "lenis": "^1.3.17",
    "rough-notation": "^0.5.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^7.4.2",
    "@axe-core/playwright": "^4.11.1",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@lucide/svelte": "^0.563.1",
    "@playwright/test": "^1.58.2",
    "@shikijs/transformers": "^3.22.0",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/enhanced-img": "^0.10.0",
    "@sveltejs/kit": "^2.50.2",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "concurrently": "^9.2.1",
    "eslint": "^9.38.0",
    "eslint-plugin-format": "^1.0.1",
    "eslint-plugin-svelte": "^3.15.0",
    "feed": "^5.2.0",
    "hast-util-to-string": "^3.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "marked": "^17.0.2",
    "mdsvex": "^0.12.6",
    "pagefind": "^1.4.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-external-links": "^3.0.0",
    "rehype-slug": "^6.0.0",
    "remark-footnotes": "2.0",
    "remark-gfm": "^4.0.1",
    "remark-smartypants": "^3.0.2",
    "shiki": "^3.22.0",
    "svelte": "^5.50.0",
    "svelte-check": "^4.3.6",
    "svelte-eslint-parser": "^1.4.1",
    "typescript": "^5.7.0",
    "unist-util-visit": "^5.1.0",
    "vite": "^7.3.1",
    "vite-plugin-pagefind": "^1.0.7"
  },
  "lint-staged": {
    "*.{ts,js,svelte,html,css}": "bun run lint"
  }
}
